<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.ryanhuang.guesscats.MainActivity">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="fill"
            android:id="@+id/imgView_cat"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_row="1"
            android:layout_column="0"
            android:text=""
            android:id="@+id/btn_catChosen"
            android:onClick="catChosen"
            android:tag="0"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_row="2"
            android:layout_column="0"
            android:text=""
            android:id="@+id/btn_catChosen1"
            android:onClick="catChosen"
            android:tag="1"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_row="3"
            android:layout_column="0"
            android:text=""
            android:id="@+id/btn_catChosen2"
            android:onClick="catChosen"
            android:tag="2"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_row="4"
            android:layout_column="0"
            android:text="CHEAT"
            android:id="@+id/btn_cheat"
            android:onClick="cheatAnswer"
            android:tag="3"/>

    </GridLayout>

</RelativeLayout>
